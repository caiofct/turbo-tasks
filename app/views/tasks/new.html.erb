<h1>New Task</h1>

<%= turbo_frame_tag "new_task", target: "_top" do %>
  <%= form_with(model: @task,
        data: { controller: "reset_form", action: "turbo:submit-end->reset_form#reset" }) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, "data-reset_form-target": "name" %>
      <%= form.submit "data-reset_form-target": "submit" %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', tasks_path %>
